<div class="container">
  <div class="row">
    <h3 class="text-center">Contact Us</h3>
    <!-- Bootstrap column control 4 empty columns to the left -->
    <div class="col-md-4 col-md-offset-4">
      <!-- Create grey box for form -->
      <div class="well">
        <!-- Create rails form -->
        <!-- Use @contact instance var from contacts_controller -->
        <%= form_for @contact do |f| %>
        <!-- Create each form box -->
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :comments %>
            <%= f.text_area :comments, class: 'form-control' %>
          </div>
          <%= f.submit 'Submit', class: 'btn btn-default' %>
        <% end %>
      </div>
    </div>
  </div>
</div