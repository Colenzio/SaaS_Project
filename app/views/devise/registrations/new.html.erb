<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      
        <!-- If statement printing out whichever plan user chooses -->
        <div class="text-center">
          <% if params[:plan] == '2' %>
            <h1>Pro Account</h1>
            <p>Sign up to the pro account for â‚¬10 a month and get access to the community and contact information</p>
          <% else %>
            <h1>Basic Account</h1>
            <p>Sign up for free and get basic access to the community</p>
          <% end %>
        </div>
        
        <div class="well">
          <!-- If user wants pro, use plan 2, else use plan 1 -->
          <% if params[:plan] == '2' %>
            <%= render "pro_form" %>
          <% else %>
            <%= render "basic_form" %>
          <% end %>
            
          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>